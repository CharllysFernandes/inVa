{
    "manifest_version": 3,
    "name": "inVa",
    "description": "Extensão básica em TypeScript para destacar conteúdo em páginas da web.",
    "version": "0.1.4",
    "icons": {
        "16": "Logo.png",
        "32": "Logo.png",
        "48": "Logo.png",
        "128": "Logo.png"
    },
    "action": {
        "default_title": "inVa",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "Logo.png",
            "32": "Logo.png",
            "48": "Logo.png",
            "128": "Logo.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'none'; base-uri 'none'; frame-ancestors 'none'; form-action 'none'; upgrade-insecure-requests;"
    }
}
