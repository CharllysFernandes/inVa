{
    "manifest_version": 3,
    "name": "inVa",
    "description": "Extensão básica em TypeScript para destacar conteúdo em páginas da web.",
    "version": "0.1.0",
    "action": {
        "default_title": "inVa",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ],
            "run_at": "document_idle"
        }
    ]
}